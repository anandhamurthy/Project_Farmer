<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context=".CropResultActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

      <de.hdodenhof.circleimageview.CircleImageView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_gravity="center_horizontal"
          android:layout_margin="5dp"
          android:id="@+id/crop_image"/>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="10dp"
          android:id="@+id/crop_details_layout"
          android:layout_margin="5dp"
          app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="match_parent">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Crop Name"
              android:fontFamily="@font/nunito_bold"
              android:textSize="15dp"
              android:layout_margin="5dp"
              android:textColor="@color/colorBlack"
              android:id="@+id/crop_title"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/nunito"
              android:textSize="15dp"
              android:layout_marginLeft="30dp"
              android:textColor="@color/colorBlack"
              android:layout_below="@+id/crop_title"
              android:id="@+id/crop_name"/>


        </RelativeLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="10dp"
          android:id="@+id/temperature_details_layout"
          android:layout_margin="5dp"
          app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="match_parent">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Temperature"
              android:fontFamily="@font/nunito_bold"
              android:textSize="15dp"
              android:layout_margin="5dp"
              android:textColor="@color/colorBlack"
              android:id="@+id/temperature_title"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/nunito"
              android:textSize="15dp"
              android:layout_marginLeft="30dp"
              android:textColor="@color/colorBlack"
              android:layout_below="@+id/temperature_title"
              android:id="@+id/crop_temperature"/>


        </RelativeLayout>
      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="10dp"
          android:id="@+id/growth_details_layout"
          android:layout_margin="5dp"
          app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="match_parent">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Growth Period"
              android:fontFamily="@font/nunito_bold"
              android:textSize="15dp"
              android:layout_margin="5dp"
              android:textColor="@color/colorBlack"
              android:id="@+id/growth_title"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/nunito"
              android:textSize="15dp"
              android:layout_marginLeft="30dp"
              android:textColor="@color/colorBlack"
              android:layout_below="@+id/growth_title"
              android:id="@+id/crop_growth"/>


        </RelativeLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="10dp"
          android:id="@+id/irrigation_details_layout"
          android:layout_margin="5dp"
          app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="match_parent">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Irrigation Pattern"
              android:fontFamily="@font/nunito_bold"
              android:textSize="15dp"
              android:layout_margin="5dp"
              android:textColor="@color/colorBlack"
              android:id="@+id/irrigation_title"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/nunito"
              android:textSize="15dp"
              android:layout_marginLeft="30dp"
              android:textColor="@color/colorBlack"
              android:layout_below="@+id/irrigation_title"
              android:id="@+id/crop_irrigation"/>


        </RelativeLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="10dp"
          android:id="@+id/disease_details_layout"
          android:layout_margin="5dp"
          app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="match_parent">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Disease"
              android:fontFamily="@font/nunito_bold"
              android:textSize="15dp"
              android:layout_margin="5dp"
              android:textColor="@color/colorBlack"
              android:id="@+id/disease_title"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/nunito"
              android:textSize="15dp"
              android:layout_marginLeft="30dp"
              android:textColor="@color/colorBlack"
              android:layout_below="@+id/disease_title"
              android:id="@+id/crop_disease"/>


        </RelativeLayout>
      </androidx.cardview.widget.CardView>

    </LinearLayout>

  </ScrollView>


</RelativeLayout>